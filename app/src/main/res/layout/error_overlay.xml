<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/errorColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_gravity="end"
            android:id="@+id/btn_overlay_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:padding="13dp"
            android:background="@null"
            app:srcCompat="@drawable/close_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_overlay_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:typeface="serif"
            tools:text="Warning" />

        <ImageView
            android:id="@+id/iv_overlay_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/no_internet_connection"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tv_overlay_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            tools:text="Error Message" />

        <Button
            android:id="@+id/btn_overlay_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#666666"
            android:text="@string/try_again"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:typeface="serif" />
    </LinearLayout>
</LinearLayout>